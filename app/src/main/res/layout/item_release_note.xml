<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/f_white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V1.0"
            android:textColor="@color/text_333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/version_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:background="@drawable/leave_bg_red"
            android:paddingLeft="11dp"
            android:paddingTop="1dp"
            android:paddingRight="11dp"
            android:paddingBottom="1dp"
            android:text="高"
            android:textColor="@color/f_white"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/version_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:text="最新版本"
            android:textColor="@color/blue_color"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/version_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="2019年10月1号"
            android:textColor="@color/text_666"
            android:textSize="13sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【更新内容】"
            android:textColor="@color/text_333"
            android:textSize="14sp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="最新版本"
            android:textColor="@color/blue_color"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>


    <TextView
        android:id="@+id/version_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="15dp"
        android:text="▪ 修改若干bug\n▪ 修改界面UI"
        android:textColor="@color/text_333"
        android:textSize="14sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/hui_layout_bg" />

</LinearLayout>