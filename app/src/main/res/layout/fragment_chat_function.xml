<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chat_function_album"
            style="@style/text_function_item"
            android:drawableTop="@drawable/icon_album"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="相册" />

        <TextView
            android:id="@+id/chat_function_capture"
            style="@style/text_function_item"
            android:drawableTop="@drawable/icon_capture"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="拍照" />


        <TextView
            android:id="@+id/chat_function_file"
            style="@style/text_function_item"
            android:drawableTop="@drawable/icon_im_file"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="文件" />


        <TextView
            android:id="@+id/chat_function_snap"
            style="@style/text_function_item"
            android:drawableTop="@drawable/icon_snap"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="阅后即焚"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/chat_function_contact"
            style="@style/text_function_item"
            android:drawableTop="@drawable/icon_im_contact"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="联系人"
            android:visibility="gone" />


        <TextView
            style="@style/text_function_item"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="文件" />

        <TextView
            android:id="@+id/chat_function_cloud"
            style="@style/text_function_item"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="我的资料" />

        <TextView
            android:id="@+id/chat_blank_one"
            style="@style/text_function_item"
            android:drawablePadding="5dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/chat_blank_two"
            style="@style/text_function_item"
            android:drawablePadding="5dp"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>