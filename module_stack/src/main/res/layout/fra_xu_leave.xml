<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leave_xu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:visibility="visible">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请假人员类别："
                    android:textColor="#1a1a1a"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/leave_xu_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4d4d4d"
                    android:textSize="13sp"
                    tools:text="外出办事" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去往地区："
                    android:textColor="#1a1a1a"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/leave_xu_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4d4d4d"
                    android:textSize="13sp"
                    tools:text="哈密" />


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="请假时间："
                android:textColor="#1a1a1a"
                android:textSize="13sp" />


            <LinearLayout
                android:id="@+id/leave_xu_time_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edit_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/leave_xu_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    tools:text="2018/12/3-- " />


                <TextView
                    android:id="@+id/leave_xu_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    tools:text="2018/12/3" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="事由："
                android:textColor="#1a1a1a"
                android:textSize="13sp"
                android:visibility="gone" />


            <EditText
                android:id="@+id/leave_xu_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edit_bg"
                android:gravity="left"
                android:hint="请填写事由"
                android:minLines="4"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="12sp"
                android:visibility="gone" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="备注："
                android:textColor="#1a1a1a"
                android:textSize="13sp"
                android:visibility="gone" />


            <EditText
                android:id="@+id/leave_xu_reson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edit_bg"
                android:gravity="left"
                android:hint="请填写备注"
                android:minLines="4"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="12sp"
                android:visibility="gone" />


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="12dp"
                android:background="#ebebeb" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="录入人："
                            android:textColor="#1a1a1a"
                            android:textSize="13sp" />


                        <TextView
                            android:id="@+id/leave_xu_person"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#4d4d4d"
                            android:textSize="13sp"
                            tools:text="张三" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="所属机构："
                            android:textColor="#1a1a1a"
                            android:textSize="13sp" />


                        <TextView
                            android:id="@+id/leave_xu_person_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#4d4d4d"
                            android:textSize="13sp"
                            tools:text="哈密" />


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="联系方式："
                            android:textColor="#1a1a1a"
                            android:textSize="13sp" />


                        <TextView
                            android:id="@+id/leave_xu_person_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#4d4d4d"
                            android:textSize="13sp"
                            tools:text="130646455151" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_margin="12dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/leave_xu_cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_left_light"
                android:gravity="center"
                android:text="放弃"
                android:textColor="#2f9be7"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/leave_xu_commit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@drawable/button_right_blue"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/White"
                android:textSize="17sp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>