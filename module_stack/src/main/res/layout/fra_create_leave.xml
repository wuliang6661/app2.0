<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leave_create_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="请假类别："
                android:textColor="#1a1a1a"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/leave_create_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edit_bg"
                android:gravity="center_vertical"
                android:hint="请填写类别"
                android:paddingLeft="12dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/go_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="去往地区："
                android:textColor="#1a1a1a"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/go_create_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edit_bg"
                android:gravity="center_vertical"
                android:hint="请填写地区"
                android:paddingLeft="12dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="13sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="请假开始时间："
                android:textColor="#1a1a1a"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/start_create_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edit_bg"
                android:gravity="center_vertical"
                android:hint="请填写开始时间"
                android:paddingLeft="12dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="13sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="请假结束时间："
                android:textColor="#1a1a1a"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/end_create_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edit_bg"
                android:gravity="center_vertical"
                android:hint="请填写结束时间"
                android:paddingLeft="12dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:text="事由："
                android:textColor="#1a1a1a"
                android:textSize="13sp"
                android:visibility="gone" />


            <EditText
                android:id="@+id/leave_create_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edit_bg"
                android:gravity="left"
                android:hint="请填写事由"
                android:minLines="4"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="12sp"
                android:visibility="gone" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="备注："
                android:textColor="#1a1a1a"
                android:textSize="13sp" />


            <EditText
                android:id="@+id/leave_create_reson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edit_bg"
                android:gravity="left"
                android:hint="请填写备注"
                android:minLines="4"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="13sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_margin="12dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/leave_create_cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_left_light"
                android:gravity="center"
                android:text="放弃"
                android:textColor="#2f9be7"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/leave_create_commit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@drawable/button_right_blue"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/White"
                android:textSize="17sp" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>