<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mwhite"
    tools:context="synway.module_publicaccount.notice.NoticeDetailActivity">

    <!--title栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/mwhite">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/icon_back_x"/>

        <ImageView
            android:id="@+id/oneline"
            android:layout_width="10dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/iv_back"
            android:layout_centerVertical="true"
            android:src="@drawable/vertical_line"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/oneline"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="@color/text_blue_text"
            android:text="工作通知"/>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLines="3"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textColor="#2E2E2E"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_publish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="13sp"
                    android:textColor="#8C8C8C"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/tv_publish_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textColor="#5F7FA6"
                    android:layout_toRightOf="@id/tv_publish_time"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_textContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>


    </ScrollView>




</LinearLayout>
